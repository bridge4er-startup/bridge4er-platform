# Core app
DEBUG=False
SECRET_KEY=change-me-with-a-long-random-secret
ALLOWED_HOSTS=api.example.com

# CORS / CSRF
CORS_ALLOWED_ORIGINS=https://www.example.com,https://example.com
CSRF_TRUSTED_ORIGINS=https://www.example.com,https://example.com

# Database (PostgreSQL in production)
DATABASE_URL=postgresql://bridge4er_user:bridge4er_password@localhost:5432/bridge4er

# Public URLs
FRONTEND_PUBLIC_URL=https://your-app.vercel.app
BACKEND_PUBLIC_URL=https://your-api.onrender.com
PAYMENT_RESULT_PATH=/payment/result

# Security hardening
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1

# OTP and payment behavior
SHOW_OTP_IN_RESPONSE=0
ALLOW_INSECURE_PAYMENT_VERIFICATION=0
OTP_PROVIDER=twilio_verify
OTP_DEFAULT_COUNTRY_CODE=+977

